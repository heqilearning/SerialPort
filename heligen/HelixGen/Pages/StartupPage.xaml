<Page x:Class="HelixGen.Pages.StartupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HelixGen.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Startup">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <!-- Note that in the code below, the status textbox should be -->

        <ProgressBar Grid.Row="1" Margin="60,10" Name="InitProgressBar" 
                     />
        <TextBlock Grid.Row="1" Margin="60,10" HorizontalAlignment="Center"
                   VerticalAlignment="Center" Name="ProgressMessage" />
    </Grid>
</Page>
